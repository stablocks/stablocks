{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@redwoodjs/core": "^0.46.0"
  },
  "scripts": {
    "postgres:up": "docker-compose up -d",
    "postgres:down": "docker-compose down",
    "dev": "yarn postgres:up && yarn rw dev",
    "test": "yarn postgres:down && yarn postgres:up && yarn rw test",
    "migrate": "yarn rw prisma migrate dev",
    "cleanup": "rm -rf {node_modules}; rm -rf packages/*/{node_modules,dist,build}",
    "regenerate-lock": "npm run cleanup && rm yarn.lock && yarn install"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "root": true
  },
  "engines": {
    "node": ">=14.17 <=16.x",
    "yarn": ">=1.15 <2"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  }
}